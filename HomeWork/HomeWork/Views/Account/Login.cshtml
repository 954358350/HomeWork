@model HomeWork.Model.LoginUser
@{
    Layout = null;
}
<!DOCTYPE  HTML>
<html xmlns="http://www.w3.org/1999/xhtml" class="rgba borderradius">
<head>
    <title>登录 - 作业登记系统</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link href="~/css/core[1].css" rel="stylesheet" />
    <link href="~/css/style[1].css" rel="stylesheet" />

    <link href="~/bootstrap-3.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap-3.3.0/js/tests/vendor/jquery.min.js"></script>
    <script src="~/bootstrap-3.3.0/dist/js/bootstrap.min.js"></script>
    <link href="~/css/font.css" rel="stylesheet" />
    <script src="~/js/index.js"></script>
</head>
<body>
    <div id="stage">
        <div id="guide" class="simple float" style="height: 110px;">
            <h1 style="font-weight: bolder">
                <img src="~/image/Log.PNG" style="padding: 0px"/>
            </h1>
        </div>
        <div id="mainer" style="min-height: 298px;">
            <div id="area-login">
                @*轮播图片*@
                <div class="block l" style="padding-left: 40px">
                    <div id="myCarousel" class="carousel slide">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>
                        <!-- Carousel items -->
                        <div class="carousel-inner">
                            <div class="active item">
                                <img src="~/image/01.jpg" class="img-rounded" />
                            </div>
                            <div class="item">
                                <img src="~/image/02.jpg" class="img-rounded" />
                            </div>
                            <div class="item">
                                <img src="~/image/03.jpg" class="img-rounded" />
                            </div>
                        </div>
                        <!-- Carousel nav -->
                        <a class="carousel-control left" href="#myCarousel" data-slide="prev"></a>
                        <a class="carousel-control right" href="#myCarousel" data-slide="next"></a>
                    </div>

                    @*<div class="bg-login"></div>*@
                </div>
                <div class="block r">
                    <div class="area-login">
                        <div id="form-login" data-focus="auto" data-save="form-login" class="form">
                            <div style="padding: 3px 2px; border-bottom: 1px solid #ccc">
                                <h2 id="jiaCu">登&nbsp;&nbsp;录</h2>
                            </div>
                            <form id="ff" method="post" action="@Url.Action("Login", "Account")">
                                <div class="area">
                                    <div class="input-group">
                                        <i class="inp-icon icon icon-user"></i>
                                        <span class="glyphicon glyphicon-user input-group-addon"></span>
                                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "请输入账号", Class = "form-control " })
                                    </div>
                                    <span class="clearfix"></span>
                                    <div class="err">@Html.ValidationMessageFor(m => m.UserName)</div>
                                </div>
                                <div>
                                    <div class="area">
                                        <div class="input-group">
                                            <span class="input-group-addon glyphicon glyphicon-lock"></span>
                                            <i class="inp-icon icon icon-lock"></i>
                                            @Html.PasswordFor(m => m.Password, new { placeholder = "请输入密码" })
                                        </div>

                                        <span class="clearfix"></span>
                                        <div class="err">@Html.ValidationMessageFor(m => m.Password)</div>
                                    </div>
                                </div>
                                <div>
                                    <div class="area">
                                        <div class="input-group">
                                            <span class="input-group-addon glyphicon glyphicon-registration-mark"></span>
                                            <i class="inp-icon icon icon-lock"></i>
                                            @Html.TextBoxFor(m => m.IdentityCode, new { placeholder = "请输入验证码" })
                                        </div>
                                        <i class="inp-icon icon icon-lock"></i>
                                        <span class="clearfix"></span>
                                        <div class="err">@Html.ValidationMessageFor(m => m.IdentityCode)</div>
                                    </div>
                                    <div style="height: 60px">
                                        <img  onclick="this.src=this.src+'?'" src="@Url.Action("SecurityCode")" width="119" height="33" style="text-align:left">&nbsp;&nbsp;&nbsp;&nbsp;<label>点击图片更换验证码</label>
                                    </div>
                                </div>
                                <div>
                                    <div class="area">
                                        <i class="inp-icon icon icon-lock"></i>
                                        登录身份:
                                        <select name="Type">
                                            <option value="1">学生</option>
                                            <option value="2">教员</option>
                                            <option value="3">管理员</option>
                                        </select>
                                    </div>
                                </div>


                                <div>
                                    <input type="submit" value="登  录" style="height: 40px;" class="btn btn-primary btn-lg btn-block" id="a" />
                                    <div style="height:60px"></div>
                                </div>

                            </form>
                        </div>
                        <div class="other-login">
                            <a href="/login/forgot/" target="_blank" class="inro r">忘记密码?</a><span class="clearfix"></span>
                        </div>
                    </div>
                </div>
                <span class="clearfix"></span>
            </div>
        </div>
    </div>
    <div class="err">@Html.ValidationSummary()</div>
    @Html.Partial("End")
</body>
</html>
