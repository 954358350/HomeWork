            @using (Html.BeginForm("LianXi", "Student", FormMethod.Post, new { enctype = "multipart/form-data", id = "LianXi", Class = "subject1" }))
            {
                <table>
                    <tr style="height: 50px">
                        <td>书本选择: </td>
                        <td>
                            @Html.DropDownList("SubjectIdlx", (SelectList)ViewBag.list, "请选择", new { id = "subject1", Class = "form-control" })
                        </td>
                    </tr>
                    <tr style="height: 50px">
                        <td>章节选择: </td>
                        <td>
                            <div class="chapter">@Html.Action("ShowChapter", "Student")</div>
                        </td>
                    </tr>
                    <tr style="height: 50px">
                        <td>选择文件(10M以内): </td>
                        <td>
                            <input type="file" name="uploadFilelx" class="form-control" id="file" />
                        </td>
                    </tr>
                    <tr style="height: 50px">
                        <td>完成度: </td>
                        <td>
                            <input type="text" name="Speedlx" class="form-control" id="speedlx" />
                        </td>
                    </tr>
                    <tr style="height: 50px">
                        <td>描述(100字以内): </td>
                        <td>
                            <textarea name="Describelx" class="form-control" id="describelx"></textarea>
                        </td>
                    </tr>
                    <tr style="height: 80px">
                        <td colspan="2" style="text-align: center;">
                            <input type="submit" value="提 交" class="btn btn-primary btn-lg" style="width: 200px" />
                        </td>
                    </tr>
                </table>
            }
