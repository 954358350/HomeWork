<script>
    $("#LianXi").submit(function () {

        var obj = $("#file").val();


        //必填验证
        var subjectlx = $("#subject1").val().trim();
        var chapterIdlx = $("#chapterIdlx").val().trim();
        var speedlx = $("#speedlx").val().trim();
        var describelx = $("#describelx").val().trim();
        if (subjectlx == "" || chapterIdlx == "" || speedlx == "" || describelx == "") {
            alert("请将信息填写完整！");
            return false;
        }
        if (obj == "") {
            alert("请选择要上传的文件!");
            return false;
        }
        if (speedlx <= 0 || speedlx > 100) {
            alert("完成度必须在1~100之间！");
            return false;
        }
        var stuff = obj.match(/^(.*)(\.)(.{1,8})$/)[3];
        if (stuff != "zip") {
            alert("文件类型不正确，请选择.zip文件!");
            return false;
        }
        return true;
    });
</script>
